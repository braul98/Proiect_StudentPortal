@model IEnumerable<StudentPortal.Models.ApplicationUser>

@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.ActionLink("View Courses Grades", "CoursesGrades", new { id = item.Id }) |
        @Html.ActionLink("Add Courses", "Courses", new { id = item.Id })
</tr>
    }

</table>

