@model IEnumerable<StudentPortal.Models.Course>
@using Microsoft.AspNet.Identity;


@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string userId = null;
    if (ViewBag.StudentId != null)
    {
        userId = ViewBag.StudentId.ToString();
    }


}



<h2>Courses</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Add Course", "AddCourse", new { courseId = item.Id, studentId = userId })
        </tr>
    }

</table>

