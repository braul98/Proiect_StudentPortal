@using Microsoft.AspNet.Identity
    @{
        ViewBag.Title = "Home Page";

    }

    <div class="jumbotron">
        <h1>ASP.NET</h1>
        <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
        @if (User.IsInRole("Admin"))
        {
            <div class="divider">
                @Html.ActionLink("Years", "Index", "Years", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
            </div>
            <div class="divider">
                @Html.ActionLink("Courses", "Index", "Courses", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
            </div>
            <div class="divider">
                @Html.ActionLink("Students", "Index", "Students", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
            </div>
        }
        @if (User.IsInRole("Student"))
        {
            @Html.ActionLink("View Grades", "ViewGrades", "Students", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
        }
    </div>